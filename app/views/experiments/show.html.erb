<div class="row">
  <h2>Template Image</h2>
  <ul class="thumbnails">
    <li class="span3">
      <a href="#template_modal" data-toggle="modal" class="thumbnail">
        <%= image_tag("input/template1_260_180.png") %>
      </a>
    </li>
  </ul>
</div>


<div class="row">
  <h2>Probe Images</h2>
  <ul class="thumbnails">
    <% @experiment.probes.each do |probe| %>
      <li class="span3">
        <%= link_to image_tag("input/#{@experiment.id}/#{probe.thumbnail_filename}"), probe_path(probe), class: "thumbnail" %>
      </li>
    <% end %>
  </ul>
</div>


<div class="modal hide" id="template_modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Template Image</h3>
  </div>
  <div class="modal-body">
    <%= image_tag("input/template1.png") %>
  </div>
</div>
